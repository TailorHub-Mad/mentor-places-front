# Prevents force-pushing to main and develop
echo "ðŸ”Ž Checking branch name..."

BRANCH=$(git rev-parse --abbrev-ref HEAD)
PROTECTED_BRANCHES="^(main|develop)"

if [[ "$BRANCH" =~ $PROTECTED_BRANCHES ]]; then
  echo -e "ðŸš« Cannot push to remote $BRANCH branch, please create your own branch and use PR." && exit 1
else
  echo "âœ… $BRANCH branch checked."
fi

exit 0
